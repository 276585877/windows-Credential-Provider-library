        <Grid.RowDefinitions>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Grid Name="PrintersGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
